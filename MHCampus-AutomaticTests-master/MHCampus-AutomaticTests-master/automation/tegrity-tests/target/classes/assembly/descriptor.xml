<assembly>
	<id>McGraw Selenium Tests</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<outputDirectory>/lib</outputDirectory>
			<excludes>
				<exclude>${groupId}:${artifactId}</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
	<files>
		<file>
			<source>target/${artifactId}-${project.version}.${project.packaging}
			</source>
			<destName>${artifactId}.${project.packaging}</destName>
		</file>
		<file>
			<source>testng.xml</source>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>testng-xml</directory>
			<outputDirectory>testng-xml</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>test-suites</directory>
			<outputDirectory>test-suites</outputDirectory>
			<includes>
				<include>*.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>debug-xml</directory>
			<outputDirectory>debug-xml</outputDirectory>
			<includes>
				<include>*.xml</include>
			</includes>
		</fileSet>

	</fileSets>
</assembly>
